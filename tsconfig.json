{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "index.ts",
    "component.ts",
    "docs/.vitepress/config.mts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "docs/.vitepress/cache", "docs/.vitepress/dist"]
}
